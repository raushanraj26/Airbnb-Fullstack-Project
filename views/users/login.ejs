<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on AirBnb</h1>
    <div class="col-8 offset-2">
        <form   class="needs-validation" novalidate action="/login" method="POST">
            <div class="mt-3">
                <label for="username" class="form-label">Enter a Username</label>
                <input name=username id="username" type="text" class="form-control" required/>
                <div class="invalid-feedback">Please Enter a Username!</div>
            </div>
            
            <div class="mt-3 mb-3">
                <label for="password" class="form-label">Enter a Strong Password</label>
                <input name=password id="password" type="password" class="form-control" required/>
                <div class="invalid-feedback">Please Enter a Password!</div>
            </div>
            <button class="btn btn-success">login</button>
        </form>

    </div>
</div>